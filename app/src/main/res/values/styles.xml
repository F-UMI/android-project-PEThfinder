<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize other theme attributes as needed -->
        <item name="android:fontFamily">@font/cafe_24_air</item>
    </style>
    <!--splash 화면에 사용될 테마-->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/password_corner_</item>
        <item name="android:fontFamily">@font/cafe_24_air</item>
        <item name="android:textColor">#FAFCFA</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/cafe_24</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="SpinnerTheme" >
        <item name="android:fontFamily">@font/cafe_24_air</item>
        <item name="android:textSize">2dp</item>
    </style>
</resources>