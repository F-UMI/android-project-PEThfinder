<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9EDC9">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#85B48F"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="수정하기"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:fontFamily="@font/cafe_24"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="72dp"
            android:background="#D9D9D9"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editBoardTitle"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="title"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editBoardUserName"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="userName"
                android:textAlignment="textEnd"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editBoardPassword"
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="password"
                android:inputType="textPassword"
                android:textAlignment="textEnd"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="256dp"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/editBoardImage"
            android:layout_width="187dp"
            android:layout_height="187dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="45dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:src="@drawable/ic_launcher_background"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editBoardText"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:hint="text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/imageEditBtn"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:layout_weight="0"
            android:text="첨부하기"
            android:fontFamily="@font/cafe_24_air"
            />

        <Button
            android:id="@+id/updateBoardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="수정하기"
            android:fontFamily="@font/cafe_24_air"
            />

    </LinearLayout>


</FrameLayout>