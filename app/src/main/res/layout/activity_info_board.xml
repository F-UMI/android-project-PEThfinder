<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFCFA"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#618264"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cafe_24"
                android:text="게시물"
                android:textColor="#FAFCFA"
                android:textSize="40dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:background="#D9D9D9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editBoardTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="#E2F0E4"
                android:fontFamily="@font/cafe_24"
                android:gravity="center"
                android:text="우리집 댕댕이를 보세요오~!"
                android:textAlignment="center"
                android:textColor="#191817"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editBoardUserName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#E2F0E4"
                android:fontFamily="@font/cafe_24_air"
                android:gravity="center"
                android:text="구름이"
                android:textColor="#191817"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editBoardPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="#E2F0E4"
                android:fontFamily="@font/cafe_24_air"
                android:gravity="center"
                android:text="12월 1일\n01시 42분"
                android:textColor="#191817"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#79AC78"
                android:fontFamily="@font/cafe_24_air"
                android:text="수정"
                android:textColor="#FAFCFA"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#79AC78"
                android:fontFamily="@font/cafe_24_air"
                android:text="삭제"
                android:textColor="#FAFCFA"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/editBoardImage"
            android:layout_width="wrap_content"
            android:layout_height="243dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="45dp"
            android:adjustViewBounds="true"
            android:background="@drawable/dialog_corner"
            android:clipToOutline="true"
            android:src="@drawable/ic_launcher_background"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/editBoardText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="45dp"
            android:layout_weight="1"
            android:background="@drawable/textview_outline"
            android:fontFamily="@font/cafe_24_air"
            android:padding="10dp"
            android:text="ded"
            android:textColor="#191817"
            android:textSize="16dp" />

    </LinearLayout>

</FrameLayout>
